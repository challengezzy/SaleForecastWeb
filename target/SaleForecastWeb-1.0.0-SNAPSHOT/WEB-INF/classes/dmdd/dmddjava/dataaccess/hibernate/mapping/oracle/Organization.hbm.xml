        name="isValid"
        type="int"
        column="ISVALID"
        not-null="true"
        length="2"
    />
    <property
        name="description"
        type="java.lang.String"
        column="DESCRIPTION"
        length="255"
    />
    <property
        name="comments"
        type="java.lang.String"
        column="COMMENTS"
        length="255"
    />
    <property
        name="pathCode"
        type="java.lang.String"
        column="PATHCODE"
        length="512"
    />
    <property
        name="dcId"
        type="long"
        column="DISTRIBUTIONCENTERID"  
