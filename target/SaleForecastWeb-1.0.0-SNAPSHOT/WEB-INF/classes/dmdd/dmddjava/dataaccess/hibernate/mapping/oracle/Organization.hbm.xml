    <id
        name="id"
        type="java.lang.Long"
        column="ID"
    >
        <meta attribute="use-in-equals">true</meta>
        <generator class="sequence">
            <param name="sequence">S_ORGANIZATION</param>
        </generator>
    </id>

    <version
        name="version"
        type="long"
        column="VERSION"
    />

    <property
